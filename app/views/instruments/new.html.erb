<div class="container d-flex justify-content-center">
  <div class="login-card row w-50 p-4">
    <div class="col-md-6 mx-auto">
      <div class="card-header">
        <h2>Instrument</h2>
      </div>
        <%= simple_form_for  @instrument  do |f| %>
      <div class="form-group">
        <div class="mt-1">
          <div class="form-group">
            <%= f.input :title %>
          </div>
          <div class="form-group">
            <%= f.input :category %>
          </div>
        </div>
        <div class="form-group">
          <%= f.input :description %>
        </div>
        <div class="form-group">
          <%= f.input :price_per_day %>
        </div>
        <div class="form-group">
          <%= f.input :pickup_address %>
        </div>
        <div>
          <%#= f.input :photo, as: :file %>
        </div>
        <div class="mt-5">
          <%= f.submit "create your instrument", class:"btn btn-success btn-sm col" %>
        </div>
          <% end %>

    </div>
  </div>
</div>

